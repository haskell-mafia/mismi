synopsis:              AWS library
category:              AWS
cabal-version:         >= 1.8
build-type:            Simple
description:           mismi-s3.

library
  build-depends:
                       base                            >= 3          && < 6
                     , ambiata-mismi-core
                     , ambiata-mismi-s3-core
                     , ambiata-p
                     , ambiata-x-conduit
                     , ambiata-x-eithert
                     , ambiata-x-exception
                     , ambiata-twine
                     , template-haskell
                     , amazonka                        >= 1.3.6      && < 1.6
                     , amazonka-core                   >= 1.3.6      && < 1.6
                     , amazonka-s3                     >= 1.3.6      && < 1.6
                     , bytestring                      == 0.10.*
                     , bifunctors                      >= 4.2        && < 5.3
                     , conduit                         == 1.2.*
                     , conduit-extra                   == 1.1.*
                     , directory                       == 1.2.*
                     , exceptions                      >= 0.6        && < 0.9
                     , extra                           == 1.6.*
                     , filepath                        >= 1.3        && < 1.5
                     , http-client                     >= 0.4.18     && < 0.5
                     , http-types                      == 0.8.*
                     , lifted-async                    == 0.9.*
                     , mtl                             >= 2.1        && < 2.3
                     , process                         >= 1.2        && < 1.5
                     , resourcet                       == 1.1.*
                     , semigroups                      >= 0.16       && < 0.19
                     , text                            == 1.2.*
                     , transformers                    >= 0.3.1      && < 0.6
                     , attoparsec                      >= 0.12       && < 0.14
                     , unix                            == 2.7.*
                     , async                           >= 2.0        && < 2.2
                     , retry                           == 0.7.*
                     , lens                            >= 4.8        && < 4.16
                     , SafeSemaphore                   == 0.10.*
                     , unix-bytestring                 == 0.3.7.*
                     , time                            >= 1.4        && < 1.7
                     , unordered-containers            >= 0.2.5      && < 0.3
                     , uuid                            == 1.3.*
                     , mmorph                          == 1.0.*
                     , lifted-base                     == 0.2.*

  ghc-options:
                       -Wall

  hs-source-dirs:
                       src


  exposed-modules:
                       Mismi.S3
                       Mismi.S3.Amazonka
                       Mismi.S3.Commands
                       Mismi.S3.Patch.Network
                       Mismi.S3.Patch.PutObjectACL
                       Mismi.S3.Data
                       Mismi.S3.Internal

