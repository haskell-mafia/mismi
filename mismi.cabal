name:                  mismi
version:               0.0.1
license:               AllRightsReserved
author:                Ambiata <info@ambiata.com>
maintainer:            Ambiata <info@ambiata.com>
copyright:             (c) 2015 Ambiata
synopsis:              AWS library
category:              AWS
cabal-version:         >= 1.8
build-type:            Custom
description:           mismi.

library
  build-depends:
                       base                            >= 3          && < 5
                     , p
                     , template-haskell
                     , x-conduit
                     , aws                             == 0.11.*
                     , amazonka                        == 99.*
                     , amazonka-core                   == 99.*
                     , amazonka-s3                     == 99.*
                     , bytestring                      == 0.10.*
                     , bifunctors                      == 4.2.*
                     , conduit                         == 1.2.*
                     , conduit-extra                   == 1.1.*
                     , directory                       == 1.2.*
                     , either
                     , exceptions                      >= 0.6        && < 0.9
                     , filepath                        == 1.3.*
                     , http-client                     == 0.4.*
                     , http-conduit                    == 2.1.*
                     , http-types                      == 0.8.*
                     , mtl                             >= 2.1       && < 2.3
                     , process                         == 1.2.*
                     , resourcet                       == 1.1.*
                     , semigroups                      == 0.16.*
                     , text                            == 1.2.*
                     , transformers                    >= 0.3        && < 0.5
                     , attoparsec                      == 0.12.*
                     , unix                            == 2.7.*
                     , async                           == 2.0.*
                     , retry                           == 0.6.*
                     , lens                            >= 4.8        && < 4.12
                     , these                           == 0.4.*
                     , x-exception

  ghc-options:
                       -Wall

  hs-source-dirs:
                       src


  exposed-modules:
                       Paths_mismi
                       Mismi
                       Mismi.Control
                       Mismi.Control.Amazonka
                       Mismi.EC2
                       Mismi.EC2.Data
                       Mismi.EC2.Metadata
                       Mismi.Environment
                       Mismi.S3
                       Mismi.S3.Commands
                       Mismi.S3.Control
                       Mismi.S3.Data
                       Mismi.SQS
                       Mismi.SQS.Data
                       Mismi.SQS.Control
                       Mismi.SQS.Commands

executable s3
  main-is:             s3.hs
  ghc-options:         -Wall -threaded -O2
  hs-source-dirs:      main
  build-depends:       base
                     , mismi
                     , optparse-applicative            == 0.11.*
                     , transformers                    >= 0.3        && < 0.5
                     , x-optparse
                     , text
                     , p

test-suite test
  type:                exitcode-stdio-1.0
  main-is:             test.hs
  ghc-options:         -Wall -threaded -O2
  hs-source-dirs:      test
  build-depends:       base
                     , mismi
                     , aws
                     , amazonka
                     , amazonka-core
                     , either
                     , exceptions
                     , filepath
                     , directory                       == 1.2.*
                     , disorder-core
                     , disorder-corpus
                     , p
                     , http-client
                     , temporary                       == 1.2.*
                     , text
                     , transformers
                     , QuickCheck                      == 2.7.*
                     , quickcheck-instances            == 0.3.*
                     , unix                            == 2.7.*
                     , uuid                            == 1.3.*

test-suite test-io
  type:                exitcode-stdio-1.0
  main-is:             test-io.hs
  ghc-options:         -Wall -threaded -O2
  hs-source-dirs:      test
  build-depends:       base
                     , mismi
                     , aws
                     , amazonka
                     , amazonka-core
                     , exceptions
                     , filepath
                     , directory                       == 1.2.*
                     , p
                     , http-client
                     , disorder-core
                     , disorder-corpus
                     , temporary                       == 1.2.*
                     , text
                     , transformers
                     , QuickCheck                      == 2.7.*
                     , quickcheck-instances            == 0.3.*
                     , unix                            == 2.7.*
                     , uuid                            == 1.3.*
                     , bytestring                      == 0.10.*
                     , lens                            == 4.9.*
                     , either                          == 4.3.*

test-suite test-cli
  type:                exitcode-stdio-1.0

  main-is:             test-cli.hs

  ghc-options:         -Wall -threaded -O2

  hs-source-dirs:
                       test

  build-depends:
                       base                            >= 3          && < 5
                     , disorder-core
